          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src= "<%= cl_image_path current_user.avatar.key, width: 38, height: 38, crop: :thumb, gravity: :face %>"/>
